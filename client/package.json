{
  "name": "kapitan",
  "publisher": "kapicorp",
  "displayName": "Kapitan Langugage Server",
  "description": "A Language Server for github.com/kapicorp/kapitan",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kapicorp/kapitan-vscode-extension"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:yaml"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yaml"
        ],
        "extensions": [
          ".yaml",
          ".yml"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && echo copying server && cp -Rf ../server/. out/server && cp ../*.md ./ && cp ../LICENSE ./LICENSE",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "webpack": "webpack --mode development",
    "vscepack": "vsce package",
    "postinstall": "echo post-install"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.94.0",
    "path-parse": "^1.0.7",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vscode-test": "^1.6.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
